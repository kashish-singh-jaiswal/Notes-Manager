<%- include("layout", { body: `
<h2>Add New Note</h2>

<% if (error) { %>
    <p class="error"><%= error %></p>
<% } %>

<form method="POST" action="/add">
    <input type="text" name="title" placeholder="Title" value="<%= formData.title || '' %>">

    <select name="category">
        <option disabled selected>Select Category</option>
        <option value="Work" <%= formData.category==='Work'?'selected':'' %>>Work</option>
        <option value="Personal" <%= formData.category==='Personal'?'selected':'' %>>Personal</option>
        <option value="Ideas" <%= formData.category==='Ideas'?'selected':'' %>>Ideas</option>
    </select>

    <textarea name="description"><%= formData.description || '' %></textarea>

    <button type="submit">Add Note</button>
</form>
` }) %>