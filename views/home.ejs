<%- include("layout", { body: `
<h2>All Notes</h2>

<form method="GET" action="/">
    <input type="text" name="search" placeholder="Search title..." value="${search || ''}">
    
    <select name="category">
        <option ${category === 'All' ? 'selected' : ''}>All</option>
        <option value="Work" ${category === 'Work' ? 'selected' : ''}>Work</option>
        <option value="Personal" ${category === 'Personal' ? 'selected' : ''}>Personal</option>
        <option value="Ideas" ${category === 'Ideas' ? 'selected' : ''}>Ideas</option>
    </select>

    <button type="submit">Filter</button>
</form>

<div class="notes-container">
    ${notes.map(note => `
        <%- include("partials/noteCard", { note: note }) %>
    `).join("")}
</div>

` }) %>